@model Project_MVC.ViewModel.CategoryViewModel

<form method="post" asp-action="Create">
    <input type="hidden" asp-for="Category.CategoryId" />

    <div class="row pb-3">
        <h2 class="text-primary"> @((Model.Category == null || Model.Category.CategoryId == 0) ? "Create" : "Update") Category</h2>
        <hr />
    </div>
    <div asp-validation-summary="All"></div>

    <div class="row mb-3">
        <label asp-for="Category.Name"></label>
        <input asp-for="Category.Name" class="form-control" />
        <span asp-validation-for="Category.Name" class="text-danger"></span>
    </div>
    @if (Model.Category == null || Model.Category.CategoryId == 0)
    {
        <button class="btn btn-primary" type"submit"> Create</button>
    }
    else
    {
        <button class="btn btn-primary" type"submit"> Update</button>
    }

    <a class="btn btn-info" asp-action="Index" asp-controller="category">Back to List</a>

</form>

