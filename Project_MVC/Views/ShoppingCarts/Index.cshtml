@model IEnumerable<Project_MVC.Models.JoinedShoppingCart>


@{
    ViewData["Title"] = "Index";
}

<h1>Kosz Produktów</h1>

@foreach(var item in Model){
    <div class="card rounded-3 mb-4">
        <div class="card-body p-4">
            <div class="row d-block justify-content-between align-items-center">
                <div class="col-md-3 col-lg-3 col-xl-3">
                    <p class="lead fw-normal mb-2">@item.Nazwa</p>
                </div>
                <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                <h5 class="mb-0">@item.Cena</h5>x<h5 class="mb-0">@item.Ilosc</h5>
                </div>
                <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                    <a asp-action="plus" asp-route-id = "@item.Id" class="btn btn-link px-2">
                        <i class="bi bi-node-plus-fill"></i>
                    </a>

                    <a asp-action="minus" asp-route-id="@item.Id" class="btn btn-link px-2">
                        <i class="bi bi-node-minus-fill"></i>
                    </a>
                 </div>
                <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                    <a href="+-" class="text-danger"><i class="fas-trash fa-lg"></i></a>
                </div>
                <div class="card mb-4">
                    <div class="card-body p-4 d-flex flex-row">
                        <div class="form-outline flex-fill">
                            <label class="form-label">Kwota Całkowita(Zł)</label>
                        </div>
                        <label class="ms-3">@ViewBag.Total</label>
                    </div>
                </div>
            </div>
        </div>

    </div>
}
   

