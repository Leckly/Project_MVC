@model Project_MVC.ViewModel.CategoryViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
        <h2 class="text-primary">Category List</h2>
    </div>
    <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="Create" asp-controller="category"><i class="bi bi-plus-circle"></i>&nbsp; Create new category</a>
    </div>
</div>

</div>

<table class="table table-bordered table-striped" style ="width:100%">

<thead>
    <tr>
        <th>
            Category Name
        </th>
        <th>
            Action
        </th>
    </tr>
</thead>
<tbody>
    @foreach (var item in Model.Categories)
    {
        <tr>
            <td>
                @item.Name 
            </td>
            <td role="group">
                <a asp-action="Create" asp-controller="category" asp-route-id="@item.CategoryId"><i class="bi bi-pencil-square"></i>Edit</a>
                <a asp-action="Delete" asp-controller="category" asp-route-id="@item.CategoryId"><i class="bi bi-trash"></i>Delete</a>

            </td>
        </tr>
    }
</tbody>
</table>

